<div class="be-content">
        <div class="page-head">
          <h2 class="page-head-title">Liên hệ</h2>
          <nav aria-label="breadcrumb" role="navigation">
            <ol class="breadcrumb page-head-nav">
              <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
              <li class="breadcrumb-item"><a href="/admin/contact">Liên hệ</a></li>
              <li class="breadcrumb-item active">Liên hệ</li>
            </ol>
          </nav>
        </div>
        <div class="main-content container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <div class="card card-table">
                <div class="card-header">Liên hệ
                </div>
                <div class="card-body">
                  <table class="table table-striped table-hover table-fw-widget" id="table1">
                    <thead>
                      <tr>
                        <th>STT</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Nội dung</th>
                        <th>Tình trạng</th>
                        <th>Thao tác</th>
                        
                      </tr>
                    </thead>
                    <tbody>
                        {{#each contact}}
                        <tr>
                            <td class="center">{{sum @index 1}}</td>
                            <td class="center">{{this.name}}</td>
                            <td class="center">{{this.email}}</td>
                            <td class="center">{{this.phone}}</td>
                            <td class="center">{{this.message}}</td>
                            <td class="center">{{this.status}}</td>
                            <td class="center">
                                <a href="/admin/contact/{{this._id}}"><button class="btn btn-rounded btn-space btn-primary btn_A">Xác nhận đã liên hệ</button></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
