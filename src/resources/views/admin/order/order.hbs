<div class="be-content">
        <div class="page-head">
          <h2 class="page-head-title">Xem tất cả đơn hàng</h2>
          <nav aria-label="breadcrumb" role="navigation">
            <ol class="breadcrumb page-head-nav">
              <li class="breadcrumb-item"><a href="index.html">Home</a></li>
              <li class="breadcrumb-item"><a href="order.html">Order</a></li>
              <li class="breadcrumb-item active">Xem tất cả đơn hàng</li>
            </ol>
          </nav>
        </div>
        <div class="main-content container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <div class="card card-table">
                <div class="card-header">Order
                  <!-- <div class="float-lg-right">
                    <a href="AdUser.html"><button class="btn btn-space btn-success hover">Add User</button></a>
                  </div> -->
                </div>
                <div class="card-body">
                  <table class="table table-striped table-hover table-fw-widget" id="table1">
                    <thead>
                      <tr>
                        <th>Tên người mua</th>
                        <th>Số điện thoại</th>
                        <th>Địa chỉ</th>
                        <th>Phương thức thanh toán</th>
                        <th>Tổng giá tiền</th>
                        <th>Trang thái đơn hàng</th>
                        <th>Tình trạng đơn hàng</th>
                        <th>Ngày tạo đơn hàng</th>
                        <th>Ngày cập nhật đơn hàng</th>
                        <th>Thao tác</th>
                      </tr>
                    </thead>
                    <tbody>
                        {{#each rs}}
                        
                      <tr class="odd name">
                        <td>{{this.userId.fullname}}</td>
                        <td>{{this.userId.phone}}</td>
                        <td>
                          {{this.userId.address}}
                        </td>
                        <td class="center">{{this.paymentMethod.name}}</td>
                        <td class="center">{{priceFormat this.totalPrice}}</td>
                        <td class="center">{{this.status}}</td>
                        <td class="center btn-stt {{#ifEq this.confirmStatus "Xác nhận đơn hàng"}}green{{/ifEq}}
                        {{#ifEq this.confirmStatus "Chưa xác nhận"}}blue{{/ifEq}}{{#ifEq this.confirmStatus "Huỷ đơn hàng"}}red{{/ifEq}}">{{this.confirmStatus}}</td>
                        <td class="center">{{dateFormat this.createdAt "DD-MM-YYYY, hh:mm"}}</td>
                        <td class="center">{{dateFormat this.updatedAt "DD-MM-YYYY, hh:mm"}}</td>
                        <td class="center">
                          <a href="/admin/order/{{this._id}}"><button class="btn btn-rounded btn-space btn-primary">Chi tiết</button></a>
                        </td>
                      </tr>
                        {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
