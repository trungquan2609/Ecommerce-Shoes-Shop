<div class="be-content">
        <div class="page-head">
          <h2 class="page-head-title">Moderator</h2>
          <nav aria-label="breadcrumb" role="navigation">
            <ol class="breadcrumb page-head-nav">
              <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
              <li class="breadcrumb-item"><a href="/admin/morderator">Moderator</a></li>
              <!-- <li class="breadcrumb-item active">Data Tables</li> -->
            </ol>
          </nav>
        </div>
        <div class="main-content container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <div class="card card-table">
                <div class="card-header">Moderator
                  <div class="float-lg-right">
                    <a href="/admin/moderator/add"><button class="btn btn-space btn-success hover">Thêm Moderator</button></a>
                  </div>
                </div>
                <div class="card-body">
                  <table class="table table-striped table-hover table-fw-widget" id="table1">
                    <thead>
                      <tr>
                        <th>STT</th>
                        <th>Họ và tên</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each admin}}
                      <tr class="odd name">
                        <td>{{sum @index 1}}</td>
                        <td>{{this.fullname}}</td>
                        <td>{{this.address}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.email}}</td>
                        <td>{{#ifCond this.status '==' 'active'}}
                        Hoạt động
                        {{/ifCond}}{{#ifCond this.status '==' 'banned'}}
                        Khoá
                          {{/ifCond}}
                        <td>{{this.createdAt}}</td>
                        
                        <td class="center">
                          <!--<a href="/admin/brand/edit/{{this._id}}"><button class="btn btn-rounded btn-space btn-primary btn_A">Chi Tiết</button></a>-->
                          {{#ifCond this.role '!=' 'admin'}}
                          {{#ifCond this.status '!=' 'banned'}}
                          <button class="btn btn-rounded btn-space btn-danger btn_A" onclick="deleteMod('{{this._id}}')" data-id="{{this._id}}" data-toggle="modal" data-target="#delete-mod">Khoá</button>
                          {{/ifCond}}
                          {{/ifCond}}
                        </td>
                      </tr>
                      
                      {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <form method="POST" name="delete-mod-form">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

      </form>



<!-- Modal -->
<div class="modal fade" id="delete-mod" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Xoá quản trị viên?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            Bạn có chắc chắn xoá?
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            <button id="btn-delete-mod" onclick="confirmDeleteMod()" type="button" class="btn btn-danger">Xoá bỏ</button>
        </div>
        </div>
    </div>
</div>
