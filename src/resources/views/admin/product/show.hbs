<div class="be-content">
        <div class="page-head">
          <h2 class="page-head-title">Product</h2>
          <nav aria-label="breadcrumb" role="navigation">
            <ol class="breadcrumb page-head-nav">
              <li class="breadcrumb-item"><a href="index.html">Home</a></li>
              <li class="breadcrumb-item"><a href="order.html">Product</a></li>
              <li class="breadcrumb-item active">Hiển thị sản phẩm</li> 
            </ol>
          </nav>
        </div>
        <div class="main-content container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <div class="card card-table">
                <div class="card-header">Hiển thị sản phẩm
                  <div class="float-lg-right">
                    <a href="/admin/product/addproduct"><button class="btn btn-space btn-success hover">Thêm Sản Phẩm</button></a>
                  </div>
                </div>
                <div class="card-body">
                  <table class="table table-striped table-hover table-fw-widget" id="table1">
                    <thead>
                      <tr>
                        <th>SKU</th>
                        <th>Tên sản phẩm</th>
                        <th>Nhãn hiệu</th>
                        <th>Giá</th>
                        <th>Giá sale</th>
                        <th>Size</th>
                        <th>Hình ảnh sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Mô tả sản phẩm</th>
                        <th>Thao tác</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each product}}
                      <tr class="odd name">
                        <td>{{this.SKU}}</td>
                        <td>
                          {{this.productName}}
                        </td>
                        <td>{{this.brandId.brandName}}</td>
                        <td class="center"> {{priceFormat this.price }}</td>
                        {{#if this.salePrice}}
                        <td class="center"> {{priceFormat this.salePrice }}</td>
                        {{else}}
                        <td class="center"> 0</td>
                        {{/if}}
                        <td class="center">{{this.size}}</td>
                        <td class="center"><img class="img" src="/img/product/{{this.productImage}}" alt=""></td>
                        <td class="center">{{this.quantity}}</td>
                        <td class="center">{{this.description}}</td>
                        <td class="center">
                          <a href="/admin/product/editproduct/{{this._id}}"><button class="btn btn-rounded btn-space btn-primary">Sửa</button></a>
                          <button class="btn btn-rounded btn-space btn-danger" data-id="{{this._id}}" data-toggle="modal" data-target="#delete-product">Xóa</button>
                        </td>
                      </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <form method="POST" name="delete-product-form">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

      </form>



<!-- Modal -->
<div class="modal fade" id="delete-product" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Xoá sản phẩm?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            Bạn có chắc chắn xoá?
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            <button id="btn-delete-product" type="button" class="btn btn-danger">Xoá bỏ</button>
        </div>
        </div>
    </div>
</div>



