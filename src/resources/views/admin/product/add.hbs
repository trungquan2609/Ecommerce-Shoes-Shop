        <div class="page-head">
          <h2 class="page-head-title">Thêm sản phẩm</h2>
          <nav aria-label="breadcrumb" role="navigation">
            <ol class="breadcrumb page-head-nav">
              <li class="breadcrumb-item"><a href="index.html">Home</a></li>
              <li class="breadcrumb-item"><a href="Product.html">Product</a></li>
              <li class="breadcrumb-item active">Thêm sản phẩm</li>
            </ol>
          </nav>
        </div>
        <div class="main-content container-fluid">
              <div class="row">
                <div class="col-md-12">
                  <div class="card card-border-color card-border-color-primary">
                    <div class="card-header card-header-divider">Thêm sản phẩm</div>
                    <div class="card-body">
                      <form action="/admin/product/addproduct" method="POST">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

                        <div class="form-group row">
                          <label class="col-12 col-sm-3 col-form-label text-sm-right">Sku</label>
                          <div class="col-12 col-sm-8 col-lg-6">
                            <input class="form-control" name="SKU" type="text" required="" placeholder="">
                          </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right">Tên sản phẩm</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                              <input class="form-control" name="productName" type="text" required="" placeholder="">
                            </div>
                        </div>
                        <div class="form-group row pt-1">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right">Nhãn hiệu</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                              <select class="form-control" name="brandName">
                                <option value="1" selected="">Adidas</option>
                                <option value="2">Nike</option>
                                <option value="3">Asics</option>
                                <option value="4">Puma</option>
                                <option value="5">Converse</option>
                              </select>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right">Giá sản phẩm</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                              <div class="input-group mb-3">
                                <input class="form-control" name="price" type="text" data-mask="currency" placeholder="vnd">
                              </div>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right">Giá sản phẩm sale</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                              <div class="input-group mb-3">
                                <input class="form-control" name="salePrice" type="text" data-mask="currency" placeholder="vnd">
                              </div>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right">Size</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                              <input class="form-control" name="size" type="text" required="" placeholder="">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right" for="productImage">Hình ảnh sản phẩm</label>
                            <div class="col-12 col-sm-6">
                              <input class="inputfile" id="productImage" type="file" name="productImage" data-multiple-caption="{count} files selected" multiple="">
                              <label class="btn-secondary" name="productImage" for="productImage"> <i class="mdi mdi-upload"></i><span>Thêm ảnh</span></label>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right">Số lượng sản phẩm</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                              <input class="form-control" name="quantity" type="text" required="" placeholder="">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-12 col-sm-3 col-form-label text-sm-right" for="inputTextarea3">Mô tả sản phẩm</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                              <textarea class="form-control" name="description" id="inputTextarea3"></textarea>
                            </div>
                          </div>
                        <div class="form-group row text-right">
                          <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                            <button class="btn btn-space btn-primary" type="submit">Submit</button>
                            <a href="Product.html">
                              <button class="btn btn-space btn-secondary">Cancel</button>

                            </a>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
      <nav class="be-right-sidebar">
        </div>
      </nav>
