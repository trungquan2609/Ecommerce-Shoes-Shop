<div class="be-content">
        <div class="page-head">
          <h2 class="page-head-title">Chi tiết danh sách</h2>
          <nav aria-label="breadcrumb" role="navigation">
            <ol class="breadcrumb page-head-nav">
              <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
              <li class="breadcrumb-item"><a href="/admin/stockin">Danh sách nhập hàng</a></li>
              <li class="breadcrumb-item active">Chi tiết nhập hàng</li> 
            </ol>
          </nav>
        </div>
        <div class="main-content container-fluid">
              <div class="card card-table">
                <div class="row">
                  <di class="col-md-12">
                    <div class="card card-border-color card-border-color-primary">
                      <div class="card-header card-header-divider"> Chi tiết nhập hàng</div>
                      <div class="card-body">
                        <table class="table table-striped table-hover table-fw-widget">
                            <thead>
                            <tr>
                                <th>STT</th>
                                <th>SKU</th>
                                <th>Tên sản phẩm</th>
                                <th>Hãng</th>
                                <th>Giá</th>
                                <th>Giảm đã giảm</th>
                                <th>Size</th>
                                <th>Số lượng</th>
                                <th>Hình ảnh</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each product.data}}
                            
                            <tr class="odd name">
                                <td class="center">{{sum @index 1}}</td>
                                <td class="center">{{this.SKU}}</td>
                                <td class="center">{{this.productName}}</td>
                                <td class="center">{{this.brandId.BrandName}}</td>
                                <td class="center">{{priceFormat this.price}}</td>
                                <td class="center">{{priceFormat this.salePrice}}</td>
                                <td class="center">{{this.size}}</td>
                                <td class="center">{{this.quantity}}</td>
                                <td class="center"><img class="img" src="/img/product/{{this.productImage}}" alt=""></td>
                            </tr>
                            {{/each}}
                            </tbody>
                        </table>    
                      </div>
                      </div>
              </div>
            </div>
          </div>
      </div>
